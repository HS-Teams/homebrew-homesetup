#!/usr/bin/env bash

function _about_() {
  echo "Is a command line tool to help you forget how to set the JAVA_HOME environment variable"
}

function _depends_() {
  if ! command -v java >/dev/null; then
    __hhs_errcho "hspm.bash: Java is required to install jenv"
    return 1
  fi

  return 0
}

function _install_() {
  unset nvm
  command brew install jenv
  return $?
}

function _uninstall_() {
  command brew uninstall jenv
  unset nvm
  return $?
}
