function about() {
  echo "A multi-faceted language for the Java platform"
}

function depends() {
  if ! command -v brew >/dev/null; then
    __hhs_errcho "hspm.bash: HomeBrew is required to install groovy"
    return 1
  fi

  return 0
}

function install() {
  command brew install groovy
  return $?
}

function uninstall() {
  command brew uninstall groovy
  return $?
}