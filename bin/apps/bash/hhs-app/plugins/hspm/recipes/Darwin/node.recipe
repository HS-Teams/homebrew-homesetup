# shellcheck disable=SC1090
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

function about() {
  echo "Node.jsÂ® is a JavaScript runtime built on Chrome's V8 JavaScript engine"
}

function depends() {
  if ! command -v nvm >/dev/null; then
    __hhs_errcho "hspm.bash: nvm is required to install node"
    return 1
  fi

  return 0
}

function install() {
  nvm install node
  return $?
}

function uninstall() {
  nvm deactivate node
  nvm uninstall node
  return $?
}
