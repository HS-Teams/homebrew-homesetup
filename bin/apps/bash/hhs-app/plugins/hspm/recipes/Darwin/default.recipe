#!/usr/bin/env bash

function about() {
  echo "This is the default recipe and it will be used when no recipe is found for a certain tool"
}

function depends() {

  if ! command -v brew >/dev/null; then
    __hhs_errcho "hspm.bash: HomeBrew is required to install default software on this machine. Tried: brew"
    return 1
  fi

  return 0
}

function install() {
  \brew install "$@"
  return $?
}

function uninstall() {
  \brew uninstall "$@" && \brew deps "$@" | xargs brew remove --ignore-dependencies
  return $?
}
