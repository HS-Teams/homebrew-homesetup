#!/usr/bin/env bash

function _about_() {
  echo "This is the default recipe and will be used when no recipe is found the specified package"
  return 0
}

function _which_() {
  command -v "${1}" &>/dev/null
  return $?
}

function _depends_() {
  return 0
}

function _install_() {

  packman="${HHS_MY_OS_PACKMAN}"

  if "${packman}" install "$@" "${1}" &>/dev/null; then
    return 0
  fi

  return 1
}

function _uninstall_() {

  packman="${HHS_MY_OS_PACKMAN}"

  if "${packman}" uninstall "$@" &>/dev/null; then
    if "${packman}" deps "$@" | xargs "${packman}" remove --ignore-dependencies &>/dev/null; then
      return 0
    fi
  fi

  return 1
}
