#!/usr/bin/env bash

function about() {
  echo "This is the default recipe and it will be used when no recipe is found for a certain tool"
  return 0
}

function depends() {

  if ! command -v "${HHS_MY_OS_PACKMAN}" >/dev/null; then
    __hhs_errcho "hspm.bash: ${HHS_MY_OS_PACKMAN} is required to install default software on this machine."
    return 1
  fi

  return 0
}

function install() {
  command "${HHS_MY_OS_PACKMAN}" install "$@"
  return $?
}

function uninstall() {
  packman="${HHS_MY_OS_PACKMAN}"
  command "${packman}" uninstall "$@" \
    && command "${packman}" deps "$@" | xargs "${packman}" remove --ignore-dependencies
  return $?
}
