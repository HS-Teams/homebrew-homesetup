#!/usr/bin/env bash

function about() {
  echo "This is the default recipe and it will be used when no recipe is found for a certain tool"
}

function depends() {
  
  if ! command -v 'apt-get' > /dev/null && ! command -v 'yum' > /dev/null; then
    __hhs_errcho "hspm.bash: no suitable tool found to install default software on this machine"
    return 1
  fi

  return 0
}

function install() {
  if command -v 'apt-get' && sudo apt-get install "$@"; then
    return $?
  elif command -v 'yum' && sudo yum install "$@"; then
    return $?
  else
    return 1
  fi
}

function uninstall() {
  if command -v 'apt-get' && sudo apt-get uninstall "$@"; then
    return $?
  elif command -v 'yum' && sudo yum uninstall "$@"; then
    return $?
  else
    return 1
  fi
}
