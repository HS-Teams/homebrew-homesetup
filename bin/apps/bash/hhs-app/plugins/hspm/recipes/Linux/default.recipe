#!/usr/bin/env bash

function _about_() {
  echo "This is the default recipe and it will be used when no recipe is found for a certain tool"
  return 0
}

function _depends_() {

  local tools

  tools=('apt-get' 'apt' 'yum' 'dnf')
  for pkg_man in "${tools[@]}"; do
    command -v "${pkg_man}" &> /dev/null  && return 0
  done

  __hhs_errcho "hspm.bash: no suitable tool found to install default software on this machine. Tried: ${tools[*]}"

  return 1
}

function _install_() {

  command -v sudo &> /dev/null && SUDO=sudo

  if command -v "${HHS_MY_OS_PACKMAN}" &> /dev/null && ${SUDO} "${HHS_MY_OS_PACKMAN}" -y install "$@"; then
    return $?
  fi

  return 1
}

function _uninstall_() {

  command -v sudo &> /dev/null && SUDO=sudo

  if command -v "${HHS_MY_OS_PACKMAN}" &> /dev/null && ${SUDO} "${HHS_MY_OS_PACKMAN}" -y remove "$@"; then
    return $?
  fi

  return 1
}
